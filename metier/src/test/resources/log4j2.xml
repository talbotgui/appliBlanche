<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{1.} - %msg%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="org.flywaydb" level="warn"><AppenderRef ref="Console" /></Logger>
		<Logger name="org.flywaydb.core.internal.command.DbMigrate" level="info"><AppenderRef ref="Console" /></Logger>
		<Logger name="org.springframework" level="warn"><AppenderRef ref="Console" /></Logger>
		<Logger name="org.hibernate" level="warn"><AppenderRef ref="Console" /></Logger>
		<Logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="error"><AppenderRef ref="Console" /></Logger>
		
<!-- 		Ces logger sont pratiques pour avoir les requêtes SQL et les paramètres des requêtes. -->
<!-- 		Mais tout est en triple (problème entre Log4J2 et JPA) -->
<!-- 		Sinon, utiliser "spring.jpa.show-sql" dans application.properties. -->
<!-- 		<Logger name="org.hibernate.SQL" level="trace"><AppenderRef ref="Console" /></Logger> -->
<!-- 		<Logger name="org.hibernate.type" level="trace"><AppenderRef ref="Console" /></Logger> -->
		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>